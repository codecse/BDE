CREATE TABLE IF NOT EXISTS `order_hyd1`(
    `ORDER_ID` INT,
    `DATE` varchar(20),
    `CUSTOMER_ID` INT,
    `AMOUNT` INT
    );
DESCRIBE order_hyd1
