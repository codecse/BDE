--SELECT c.NAME,o.ORDER_ID FROM customer_hyd c,order_hyd1 o WHERE o.ORDER_ID = 101;

SELECT c.NAME, o.ORDER_ID FROM customer_hyd c JOIN (SELECT * FROM order_hyd1 WHERE ORDER_ID = 101) o ON c.CUSTOMER_ID = o.CUSTOMER_ID;
