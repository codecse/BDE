-- EXP 7

CREATE TABLE IF NOT EXISTS EMPLOYEE_TABLE (id INT,name STRING,age INT,salary INT);
DESCRIBE EMPLOYEE_TABLE
CREATE TABLE IF NOT EXISTS LOAN_TABLE (loadid INT,id INT,loan_applied Boolean,loan_amt INT);
DESCRIBE LOAN_TABLE

