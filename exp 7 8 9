SELECT e.name,l.loadid FROM EMPLOYEE_TABLE e,LOAN_TABLE l WHERE e.id=l.id AND l.loan_applied=true;
SELECT e.name FROM EMPLOYEE_TABLE e,LOAN_TABLE l WHERE e.id=l.id AND l.loan_applied=true;


-- EXP 8

CREATE TABLE IF NOT EXISTS `dept_hyd2` (
    `DEPARTMENT_ID`  INT,
    `DEPARTMENT_NAME` varchar(20)
    );
DESCRIBE dept_hyd2
INSERT INTO dept_hyd2 VALUES (901,'CSE'), (902,'IT'), (903,'ECE'),(904,'MECH'), (905,'CIVIL'), (906,'EEE'), (907,'ECM'), (908,'AERO'), (909,'CHEMICAL'), (910,'METTALURGY'), (911,'OIL AND PETROLEUM');
SELECT * FROM dept_hyd2

SELECT e.NAME,d.DEPARTMENT_NAME FROM employee_table e, dept_hyd2 d WHERE d.DEPARTMENT_ID = 901;


-- EXP 9

CREATE TABLE IF NOT EXISTS `customer_hyd`(
    `CUSTOMER_ID` INT,
    `NAME` varchar(20),
    `AGE` INT,
    `ADDRESS` varchar(20),
    `SALARY` INT
    );
DESCRIBE customer_hyd
